<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E4E4E4"
    tools:context=".listaUsuarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8b4513"
            android:textColor="#000000"
            android:textColorLink="#8b4513"
            android:ems="10"
            android:hint="Buscar"
            android:textColorHint="#000000"
            android:textColorHighlight="#000000"
            android:inputType="text"
            android:padding="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonLupa"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#8b4513"
            android:gravity="center"
            app:icon="@drawable/lupa_original"
            app:iconSize="20dp"/>

        <Button
            android:id="@+id/buttoninicio"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#8b4513"
            android:gravity="center"
            app:icon="@drawable/house_svgrepo_com"
            app:iconSize="29dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/volver" />

        <TextView
            android:id="@+id/lblPortada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista Usuarios"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#8b4513"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>
</LinearLayout>