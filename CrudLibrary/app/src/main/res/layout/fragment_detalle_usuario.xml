<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="true"
    tools:context=".detalleUsuarioFragment">

    <!-- Fondo de la vista -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        android:alpha="0.9" />

    <!-- Contenedor principal para los elementos de la interfaz -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- Encabezado con el botón para volver y el título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/volver"
                android:contentDescription="@string/volver" />

            <TextView
                android:id="@+id/lblPortada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle de Usuario"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Campo Nombre completo -->
        <TextView
            android:id="@+id/txtnombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre completo"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lblnombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:importantForAccessibility="yes" />

        <!-- Campo Dirección -->
        <TextView
            android:id="@+id/txtdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lbldireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:importantForAccessibility="yes" />

        <!-- Campo Correo -->
        <TextView
            android:id="@+id/txtcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lblcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:importantForAccessibility="yes" />

        <!-- Campo Tipo de usuario -->
        <TextView
            android:id="@+id/txttipo_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de usuario"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/lbl_tipo_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8b4513"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Botones para editar y eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#8b4513"
                android:text="Editar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#8b4513"
                android:text="Eliminar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
